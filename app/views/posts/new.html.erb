<h2>New book</h2>

<%= form_with model: @new_post, local:true do |form| %>

<%= form.label :title %>
<%= form.text_field :title %>
<%= form.label :image %>
<%= form.file_field :post_file, direct_upload: true %>
<%= form.label :comment %>
<%= form.text_area :explanation %>
<br>
<%= form.submit '投稿する' %>　<!-- ネーミング検討 -->
<% end %>