<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model:@post, local:true do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :post_file %>
      </div>
      <div class="form-group">
        <%= form.label :comment %>
        <%= form.text_area :explanation, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
