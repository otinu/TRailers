<div class='container'>
  <div class='row'>
    <div class="col-11 offset-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= render partial: 'homes/language' %>
        </div>
      
        <div class=form-group>
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, size: "35" %>
        </div>
      
        <div class=form-group>
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "35" %>
        </div>
      
        <div class=form-group>
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %><%= I18n.t("characters minimum") %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", size: "35" %>
        </div>
      
        <div class=form-group>
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "35" %>
        </div>
      
        <div class=form-group>
          <%= f.check_box :mine_open, { checked: false } %>
          <%= link_to I18n.t("TOS"), controller: "/homes", action: "about" %>
        </div>
        <%= f.hidden_field :others_open, :value => true %>
      
      
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
